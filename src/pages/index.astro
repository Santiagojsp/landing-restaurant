---
import { t, changeLanguage } from "i18next";
import Template from "../layouts/template.astro";
import Reviews from "../components/dynamic/reviews.jsx";

changeLanguage("es");
---

<Template>
	<img 
		src="https://wallpaperbat.com/img/373004-culinary-wallpaper-shocking-culinary.jpg"
		class="absolute top-0 left-0 w-full h-[850px] z-[-1] object-cover select-none"
		draggable="false"
	/>

	<main class="mt-10 w-[95%] xl:w-[1100px] bg-white px-10 rounded"> 
		<div class="flex flex-col gap-7 md:flex-row my-12 items-center">
			<section class="flex flex-col">
				<h1 class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl">
					{t("header.h1.first")}<span class="underline underline-offset-3 decoration-8 decoration-red-400">{t("header.h1.second")}</span>
				</h1>
				<p class="text-lg font-normal text-gray-500 mt-5 lg:text-xl">{t("header.h2.first")}</p>
			</section>
	
			<img 
				src="https://static.vecteezy.com/system/resources/previews/021/333/207/original/white-plate-with-food-isolated-on-a-transparent-background-png.png"
				class="w-[450px]"
				draggable="false"
			/>
		</div>
	
		<section class="mt-10">
			<h2 class="text-4xl">
				{t("section1.h2")}
			</h2>
			<p class="text-md mt-3 text-red-500">
				{t("section1.p")}
			</p>
		</section>
	
		<Reviews client:load />
	
		<div class="border-b mt-32 mb-10 pb-7 flex flex-col lg:flex-row gap-5 lg:gap-0 items-center justify-between">
			<section>
				<h2 class="text-4xl">
					{t("section2.h2")}
				</h2>
				<p class="text-md mt-3 text-red-500">
					{t("section2.p")}
				</p>
			</section>
	
			<div class="border border-black flex items-center gap-5 px-4 py-3">
				<span class="material-symbols-outlined">
					email
				</span>
				<input
					type="text"
					placeholder="...@gmail.com"
				/>
			</div>
		</div>
	
		<div class="mb-20 flex flex-col lg:flex-row justify-center items-center">
			<section class="flex flex-col gap-3 px-10 lg:border-r text-center h-[200px] justify-center">
				<h2 class="text-4xl font-extrabold">
					{t("section3.h2")}
				</h2>
				<p>{t("section3.p")}</p>
			</section>
	
			<section class="flex flex-col gap-3 px-20 lg:border-r text-center h-[200px] justify-center">
				<h2 class="text-4xl font-extrabold">
					{t("section4.h2")}
				</h2>
				<div class="flex gap-5 items-center">
					<p class="flex-1 whitespace-nowrap">{t("section4.p1")}</p>
					<div class="flex items-center gap-2">
						<span class="bg-gray-100 px-2 py-1">
							10:00
						</span> 
						-
						<span class="bg-gray-100 px-2 py-1">
							22:00
						</span>
					</div>
				</div>

				<div class="flex gap-5 items-center">
					<p class="flex-1 whitespace-nowrap">{t("section4.p2")}</p>
					<div class="flex items-center gap-2">
						<span class="bg-red-400 text-white px-2 py-1">
							13:00
						</span> 
						-
						<span class="bg-red-400 text-white px-2 py-1">
							24:00
						</span>
					</div>
				</div>
				
				<div class="flex gap-5 items-center">
					<p class="flex-1 whitespace-nowrap">{t("section4.p3")}</p>
					<div class="bg-orange-400 text-white px-2 py-1">
						{t("section4.p3")}
					</div>
				</div>				
			</section>
	
			<section class="flex flex-col gap-3 px-10 h-[200px] text-center justify-center">
				<h2 class="text-4xl font-extrabold">
					{t("section5.h2")}
				</h2>
				<p>{t("section5.p")}</p>
			</section>
		</div> 
	</main>

	<style>
		input:focus {
            outline: transparent !important;
        }
	</style>
</Template>
