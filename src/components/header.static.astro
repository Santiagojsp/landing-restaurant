---

import { t } from "i18next";
import { LanguageSelector } from "astro-i18next/components";

---

<nav class="w-screen py-5 px-7 flex flex-col md:flex-row gap-5 items-center justify-between border-b bg-white">
    <h2 class="text-2xl">
        { t('components.header.name') }
    </h2>

    <ul class="flex gap-5">
        <li>
            { t('components.header.menu.home') }
        </li>

        <li>
            { t('components.header.menu.products') }
        </li>

        <li>
            <LanguageSelector showFlag={ true } class="bg-white" />
        </li>
    </ul>

    <style>
        @font-face {
            font-family: dancing;
            src: url('/assets/fonts/dancing.ttf');
        }

        h2 {
            font-family: dancing;
        }
    </style>
</nav>